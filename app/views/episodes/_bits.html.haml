.bits
	- bits.each do |bit|
		.bit{:id="bit_#{bit.id}"}
			%h4
				= link_to_unless bit.url.empty?, bit.title, bit.url, :rel=>"tooltip", :title=> bit.url
				%a.icon-asterisk.icon-white{:href=>"#{user_path(bit.user)}", :rel=>"tooltip", :title=>"Added by #{bit.user.name}",:data=>{:placement=>"right"}}
			= textilize(bit.body).html_safe unless bit.body.blank? 
