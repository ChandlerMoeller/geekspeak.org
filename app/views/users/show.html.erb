<% title @user.display_name %>

<p>
 <%= @user.login.capitalize %>

  last logged in <%= time_ago_in_words(@user.current_sign_in_at) unless @user.current_sign_in_at.blank? %> ago.
</p>

<ul>
  <li class="nav-header"><%= @user.login.capitalize %> was involved in these episodes</li>
	<% @user.episodes.each do |episode| %>
	  <li> <%= link_to "#{episode.to_param} #{episode.title}", episode_path(episode) %></li>
	<% end %>
</ul>

<p>
  <%= link_to "Edit", edit_admin_user_path(@user) if :authenticate_user!  %>
</p>
