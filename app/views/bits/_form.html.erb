<%= simple_form_for @bit, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Bit</legend>

	<%= f.input :title %>	
	<%= f.input :url %>
	<%= f.association :user, :collection => User.all %>
	<%= f.input :body %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', bits_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
